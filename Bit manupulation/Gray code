class Solution {
public:
    vector<int> grayCode(int n) {
        if (n == 0)
            return {0};
        if (n == 1)
            return {0, 1};

        vector<int> prev = grayCode(n - 1);     // backtrack
        vector<int> result = prev;

        for (int i = prev.size() - 1; i >= 0; i--) {
            int temp = prev[i] | (1 << (n - 1));       //or than left shift
            result.push_back(temp);
        }
        return result;
    }
};
